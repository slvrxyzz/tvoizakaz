# TeenFreelance backend env for beta/local-prod
# Copy to .env before running

# Core
APP_NAME=TeenFreelance
APP_VERSION=0.1.0
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=change_me_to_a_secure_64_char_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_RESET_TOKEN_TTL=3600
LOG_LEVEL=info

# API / CORS
CORS_ORIGINS=http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# Database (MariaDB in docker-compose)
DATABASE_URL=mysql+aiomysql://teen_user:teen_pass@db:3306/teen_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_RECYCLE=3600
DATABASE_POOL_PRE_PING=true

# Redis (optional; falls back to in-memory if unavailable)
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# SMTP (optional, leave blank if not used)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Monitoring (optional)
SENTRY_DSN=

# Docker-compose exposed ports
BACKEND_PORT=8000
DB_PORT=3306

# MariaDB container creds (docker-compose)
MYSQL_ROOT_PASSWORD=strong_root_password_change_me
MYSQL_DATABASE=teen_db
MYSQL_USER=teen_user
MYSQL_PASSWORD=teen_pass










